{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowJs": false,
    "checkJs": false,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    // >>> ADIÇÕES IMPORTANTES <<<
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["leaflet", "geojson"]
  },
  "include": ["src", "src/global.d.ts"],
  "references": []
}

